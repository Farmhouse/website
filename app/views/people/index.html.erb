<h1>
  People
  ( <%= link_to 'New', new_person_path %> )
</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Image</th>
    <th>Staff</th>
    <th>Organizer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.bio %></td>
    <td><%= person.image %></td>
    <td><%= person.staff %></td>
    <td><%= person.organizer %></td>
    <td>
      <%= link_to 'Show', person %>
      <%= link_to 'Edit', edit_person_path(person) %>
      <%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
