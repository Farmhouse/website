  <footer role="contentinfo" id="site" class="container">
    <ul>
      <li><a href="mailto:barn@farmhouse.la">barn@farmhouse.la</a></li>
      <li><%= link_to "1558 Gordon St / LA, CA / 90028", "http://goo.gl/maps/tmWX", :rel => "external" %></li>
