<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Street address</th>
    <th>Extended address</th>
    <th>Region</th>
    <th>Locality</th>
    <th>Postal code</th>
    <th>Country name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.street_address %></td>
    <td><%= location.extended_address %></td>
    <td><%= location.region %></td>
    <td><%= location.locality %></td>
    <td><%= location.postal_code %></td>
    <td><%= location.country_name %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

