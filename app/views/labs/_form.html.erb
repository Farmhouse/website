<%= form_for(@lab) do |f| %>
  <% if @lab.errors.any? %>
    <div id="error_explanation">
      <h2>You missed <%= pluralize(@lab.errors.count, "required field") %> in your proposal</h2>

      <ul>
        <% @lab.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :your_name, "Your Name".html_safe %>
  <%= f.text_field :your_name %>

  <%= f.label :your_email, "Your Email".html_safe %>
  <%= f.text_field :your_email %>

  <%= f.label :your_twitter, "Your Twitter".html_safe %>
  <%= f.text_field :your_twitter %>

  <%= f.label :your_phone, "Your Phone Number".html_safe %>
  <%= f.text_field :your_phone %>

  <%= f.label :your_bio, "Your Bio".html_safe %>
  <%= f.text_area :your_bio %>


  <h3>About the Project</h3>

  <div class="input-prepend">
    <%= f.label :project_twitter, "Project Twitter <span class='label'>optional</span>".html_safe %>
    <%= f.text_field :project_twitter %>
  </div>

  <%= f.label :project_title, "Project Title".html_safe %>
  <%= f.text_field :project_title %>

  <%= f.label :project_description, "Project Description".html_safe %>
  <%= f.text_area :project_description %>

  <%= f.label :project_budget, "Project Budget <span class='label'>optional</span>".html_safe %>
  <%= f.text_field :project_budget %>


  <h3>Dates</h3>
  <%= f.label :project_starts_on, "When do you want to start? <span class='label'>optional</span>".html_safe %>
  <%= f.date_select :project_starts_on,
                    {
                      :start_year => Time.now.year,
                      :end_year   => Time.now.year + 1,
                      :order      => [:month, :day, :year],
                      :prompt     => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }
                    },
                    {
                      :class => "span2"
                    }
                  %>

  <%= f.label :project_ends_on, "How long will it take you? <span class='label'>optional</span>".html_safe %>
  <%= f.date_select :project_ends_on,
                    {
                      :start_year => Time.now.year,
                      :end_year   => Time.now.year + 1,
                      :order      => [:month, :day, :year],
                      :prompt     => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }
                    },
                    {
                      :class => "span2"
                    }
                  %>


  <div class="actions">
    <button class="btn btn-large btn-primary" type="submit">Submit Your Labs Proposal</button>
  </div>
<% end %>
