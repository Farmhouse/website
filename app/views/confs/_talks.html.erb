<% unless @conf.talks.blank? %>
  <div class="row">

    <div id="talks" class="span12">
      <% @conf.talks.in_groups_of(2).each do |row| %>

        <div class="row">
          <% row.each do |talk| %>

            <% unless talk.nil? %>
              <div class="talk span6">
                <h2 id="<%= talk.people.first.slug %>">
                  <%= link_to conf_talk_path(talk.conf, talk.slug) do %>
                    <b><%= talk.people.first.name %></b> <br />
                    <%= talk.title.html_safe %>
                  <% end %>
                </h2>


                <%= link_to remote_image_tag("speakers/#{talk.people.first.slug}",
                                             :alt => talk.people.first.name),
                      conf_talk_path(talk.conf, talk.slug) %>

                  <div class="notes">
                    <%= talk.try(:description).html_safe %>

                    <% unless talk.videos.blank? %>
                      <p><b><%= link_to "Watch the video &rarr;".html_safe, conf_talk_path(talk.conf, talk.slug) %></b></p>
                    <% end %>
                  </div>

                <div class="bio">
                  <%= raw talk.people.first.try(:bio) %>
                </div> <!-- .bio -->
              </div> <!-- .talk -->
            <% end %>

          <% end %>
        </div> <!-- .row -->

      <% end %>
    </div><!-- #talks -->

  </div> <!-- .row -->
<% end %>
