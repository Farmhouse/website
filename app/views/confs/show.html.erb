<%= render "nav" %>

<article>
  <header>
    <h1><%= link_to_conf @conf %></h1>

    <h2><%= @conf.subtitle %></h2>

    <div class="row">
      <div class="span6">
        <h3>In <%= @conf.year %> at <%= @conf.location.name %></h3>
        <h4>
          <%= time_tag @conf.starts_at %>
          &mdash;
          <%= time_tag @conf.ends_at %>
        </h4>

        <p class="twitter"><%= link_to_twitter(@conf) %></p>
      </div>

      <div class="span12">
        <div class="row">

          <div class="span6" id="description">
            <h3>Description</h3>
            <%= render "/confs/descriptions/farmhouse_conf_#{@conf.year}" %>
          </div>

          <%= render "/confs/extra_descriptions/farmhouse_conf_#{@conf.year}" %>
        </div> <!-- .description -->

      </div> <!-- .span12 -->
    </div> <!-- .row -->
  </header>

  <%= render "talks"    %>
  <%= render "sponsors" %>
</article>
