<%= render :partial => "nav" %>

<article>
  <header>
    <h1><%= link_to_conf @conf %></h1>

    <h2><%= @conf.subtitle %></h2>

    <div class="row">
      <div class="span6">
        <h3>In <%= @conf.year %> at <%= @conf.location.name %></h3>
        <h4>
          <%= time_tag @conf.starts_at %>
          &mdash;
          <%= time_tag @conf.ends_at %>
        </h4>

        <p class="twitter"><%= link_to_twitter(@conf) %></p>

        <div class="description">
          <%= render "/confs/descriptions/farmhouse_conf_#{@conf.year}" %>
        </div> <!-- .description -->
      </div>
    </div>
  </header>


  <% unless @conf.talks.blank? %>
    <% @conf.talks.in_groups_of(2).each do |row| %>
      <div class="row">

        <% row.each do |talk| %>
          <% unless talk.nil? %>
            <div class="span6">
              <h2 id="<%= talk.people.first.slug %>">
                <%= link_to talk.title, year_talk_path(talk.conf.year, talk.slug) %>
              </h2>

              <%= link_to remote_image_tag("speakers/#{talk.conf.year}/#{talk.people.first.slug}/#{talk.people.first.slug}"), year_talk_path(talk.conf.year, talk.slug) %>

              <% if @conf.year == 2012 %>
                <div class="notes">
                  <%= simple_format talk.description %>
                </div>
              <% end %>

              <div class="bio">
                <%= raw talk.people.first.try(:bio) %>
              </div> <!-- .bio -->
            </div>
          <% end %>
        <% end %>


        <% if @conf.year == 2012 %>
          <div id="sponsors" class="span6">
            <h2>Sponsors</h2>

            <%= link_to_sponsor_image_tag(2012, "okcupid-labs",     "http://okcupidlabs.com") %>
            <%= link_to_sponsor_image_tag(2012, "github",           "https://github.com"    ) %>
            <%= link_to_sponsor_image_tag(2012, "the-hybrid-group", "http://hybridgroup.com") %>
            <%= link_to_sponsor_image_tag(2012, "square",           "http://squareup.com"   ) %>
            <%= link_to_sponsor_image_tag(2012, "blueboxgroup",     "http://bluebox.net"    ) %>

            <h2>Food and Drinks Provided by</h2>

            <%= link_to_sponsor_image_tag(2012, "doomies",      "http://twitter.com/doomies") %>
            <%= link_to_sponsor_image_tag(2012, "veggie-grill", "http://veggiegrill.com"    ) %>
            <%= link_to_sponsor_image_tag(2012, "claras-cakes", "http://ClaraCakes.com"     ) %>
            <%= link_to_sponsor_image_tag(2012, "heroku",       "http://heroku.com"         ) %>
          </div>
        <% end %>

      </div> <!-- .row -->
    <% end %>
  <% end %>

  <section id="sponsors">
    <div class="row">
    </div> <!-- .row -->
  </section>
</article>
