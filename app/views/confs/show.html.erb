<p id="notice"><%= notice %></p>

<h1>
  <%= link_to_unless_current @conf.name, @conf %>
  ( <%= link_to "Edit", edit_conf_path(@conf) %> )
</h1>
<h2><%= @conf.subtitle %></h2>
<h3>In <%= @conf.year %> at <%= link_to @conf.location.name, @conf.location %></h3>

<p>
  <%= time_tag @conf.starts_at %>
  &mdash;
  <%= time_tag @conf.ends_at %>
</p>

<p><%= link_to_twitter(@conf) %></p>

<% unless @conf.talks.blank? %>
  <ul>
    <% @conf.talks.each do |talk| %>
      <li>
        <article>
          <h1><%= link_to talk.title, talk %></h1>
          <h2>
            by
            <% talk.people.each do |person| %>
              <%= link_to person.name, person %>
            <% end %>
          </h2>
        </article>
      </li>
    <% end %>
  </ul>
<% end %>
