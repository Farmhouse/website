        <h4>
          <time class="dt-start dtstart" datetime="2014-03-16T18:00-08:00">Sunday March 16, 6pm</time>
          &ndash;
          <time class="dt-end dtend"     datetime="2014-03-16T21:00-08:00">9pm</time>
        </h4>

        <p class="twitter">
          <%= link_to "@farmhouse", "https://twitter.com/farmhouse", rel: "external me" %>
        </p>
      </div>

